<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/shape_card_radius_white"
    android:layout_width="match_parent"
    android:layout_marginTop="20dp"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="111dp"
        android:layout_height="111dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        android:adjustViewBounds="true"
        android:contentDescription="iconCard"
        android:scaleType="fitXY"
        android:src="@drawable/ic_wallet_card" />

    <LinearLayout
        android:padding="20dp"
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tvSeatNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_baseline_airline_seat_recline_normal"
                android:drawablePadding="@dimen/defaultEditTextSize"
                android:drawableTint="@color/primaryTextColor"
                android:text="Seat Number : 1"
                android:textColor="@color/primaryTextColor"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tvSourceStop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Source Stop"
                android:drawableLeft="@drawable/ic_baseline_location_on"
                android:drawablePadding="@dimen/defaultEditTextSize"
                android:textStyle="bold"
                android:textSize="18sp"
                android:gravity="right"
                android:drawableTint="@color/primaryTextColor"
                android:textColor="@color/primaryTextColor"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" - "
                android:textSize="18sp"
                android:layout_marginHorizontal="8dp"
                android:gravity="center"/>
            <TextView
                android:id="@+id/tvDestinationStop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Destination Stop"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/primaryTextColor"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tvDuration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="30 menit"
                android:textSize="18sp"
                android:drawableLeft="@drawable/ic_baseline_access_time"
                android:drawablePadding="@dimen/defaultEditTextSize"
                android:gravity="center"/>
            <TextView
                android:id="@+id/tvDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" [2020-01-1]"
                android:textSize="18sp"
                android:gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tvCodeBus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_baseline_directions_bus"
                android:drawablePadding="@dimen/defaultEditTextSize"
                android:text="Bus BU01"
                android:textSize="18sp" />
            <TextView
                android:id="@+id/tvAgency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" [Nama Agency]"
                android:textSize="18sp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tvFare"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rp. 40.000"
            android:drawableLeft="@drawable/ic_baseline_monetization_on"
            android:textStyle="bold"
            android:textSize="26sp"
            android:drawableTint="@color/design_default_color_secondary"
            android:drawablePadding="@dimen/defaultEditTextSize"
            android:textColor="@color/design_default_color_secondary"/>
    </LinearLayout>
</RelativeLayout>
