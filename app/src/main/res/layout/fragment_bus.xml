<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controller.ui.bus.BusFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/laySearch"
            android:paddingBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/searching_form_backgroud"
            android:orientation="vertical" >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Find Bus"
                    android:gravity="center"
                    android:padding="15dp"
                    android:paddingTop="12dp"
                    android:textSize="22sp"
                    android:textColor="@color/text_color"
                    android:textStyle="bold"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="12dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_marginBottom="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Source Stop"
                        android:textSize="14sp"/>
                    <EditText
                        android:inputType="none"
                        android:textIsSelectable="true"
                        android:focusable="false"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Lebak Bulus"
                        android:drawableLeft="@drawable/ic_baseline_my_location"
                        android:drawableTint="@color/dark_base_700"
                        android:drawablePadding="12dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginBottom="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Source Stop"
                        android:textSize="14sp"/>
                    <EditText
                        android:inputType="none"
                        android:textIsSelectable="true"
                        android:focusable="false"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Harmoni"
                        android:drawableLeft="@drawable/ic_baseline_location_on"
                        android:drawableTint="@color/dark_base_700"
                        android:drawablePadding="12dp"/>
                </LinearLayout>

                <Button
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Search"
                    android:layout_marginTop="12dp"
                    android:paddingHorizontal="20dp"
                    android:background="@drawable/rounded_button"
                    android:textStyle="bold"
                    android:textColor="@color/white"/>
            </LinearLayout>
        </LinearLayout>

        <ScrollView
            android:id="@+id/layListBus"
            android:layout_below="@id/laySearch"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="12dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="List Bus"
                    android:textStyle="bold"
                    android:textSize="18sp"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/listBus"
                    android:scrollbars="vertical"
                    android:layout_marginTop="12dp"
                    android:background="@android:color/transparent"/>

                <TextView
                    android:id="@+id/internet_hilang"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hidupkan Koneksi Internet"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:visibility="gone"/>
            </LinearLayout>


        </ScrollView>

    </RelativeLayout>


</FrameLayout>